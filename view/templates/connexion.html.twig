		<main>
			<article id="connexion_form_desktop">
				<form method="post" action="../../index.php?theme={{theme}}&page_number=3">
					<label id="login">LOGIN :</label>
					<input type="text" name="login" id="login_form" required>
					<label id="password">PASSWORD :</label>
					<input type="text" name="password" id="password_form" required>
					<input type="submit" name="submit" value="CONNEXION">
					<input type="hidden" name="formSent" value="2">
					<span style="color: red; text-align: center;">{{connexionError}}</span>
				</form>
			</article>	
			<article id="connexion_form_tablet_mobile">
				<form method="post" action="../../index.php?theme={{theme}}&page_number=3">
