		<main>
			<article id="publishForm">
				<form method="post" action="../../index.php?selectedTheme={{selectedTheme}}&pageNumber=4">
					<h3>{{site["publishStepOne"]}}</h3>
					<label id="title">{{site["publishTitle"]}}</label>
					<input type="text" name="title" id="title_form" maxlength=100 value="{{publishTitle}}" required>
					<span id="titleSpan"></span>
					<label id="login">{{site["publishContent"]}}</label>
					<textarea name="content" id="content_form" maxlength=500 required>{{publishContent}}</textarea>
					<span id="contentSpan"></span>
					<input type="submit" name="submit" value="NEXT">
					<input type="hidden" name="formSent" value="3">
					<span style="color: red; align-self: center; margin-top: 33px;">{{publishError}}</span>
				</form>
			</article>		
		</main>
